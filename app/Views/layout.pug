include mixins/base


doctype html
html
  head
    title Bump
    meta(charset="utf-8")
    link(rel='icon' href="/assets/images/icon.png")
    link(rel='stylesheet' href='/stylesheets/style.css')
    block style
    script(src='/scripts/app.js')
    block modules
  body
    #container
      #header
        a(href='/').logo
          img(src='/assets/images/logo.png')
          h1 Bump

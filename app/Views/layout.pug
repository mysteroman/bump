        a(href='/ranking'): span Classement
      #body
        block body
      #footer
        block footer

    script(src="/scripts/vendor/jquery-3.5.1.min.js")
    script(src="/scripts/vendor/bootstrap.bundle.min.js")
    script(src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js")
    block scripts